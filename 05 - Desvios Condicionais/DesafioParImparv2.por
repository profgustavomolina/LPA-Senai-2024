programa
{
	
	funcao inicio()
	{
		inteiro numero

		escreva("Digite um n°: \n")
		leia(numero)

		se (numero%2 == 0)
		{
			escreva("O número: ", numero," é par")
		}
		se (numero%2 == 1)
			escreva("O número: ", numero," é impar")
		}
